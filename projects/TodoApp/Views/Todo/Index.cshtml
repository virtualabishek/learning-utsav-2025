@model IEnumerable<TodoApp.Models.TodoItem>

@{
    ViewData["Title"] = "Todo Manager";
}

<h2>Todo Manager</h2>

<!-- User Info -->
@if (User.Identity!.IsAuthenticated)
{
    <p><strong>Welcome, @User.Identity.Name!</strong> | <a asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Todo")">Logout</a></p>
}
else
{
    <p><a asp-area="Identity" asp-page="/Account/Login">Login</a> | <a asp-area="Identity" asp-page="/Account/Register">Register</a></p>
}

<!-- TempData Success Message -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- HttpContext: IP and Request Count -->
<p><strong>Your IP:</strong> @ViewBag.UserIP | <strong>Requests this session:</strong> @ViewBag.RequestCount</p>

<!-- Cache: Total Todos -->
@if (ViewBag.TotalTodos != null)
{
    <p><strong>Your Todos (Cached):</strong> @ViewBag.TotalTodos (Refreshes every 5 min)</p>
}

<!-- Cookies: Theme Toggle -->
<form asp-action="ToggleTheme" method="post" style="display: inline; margin-bottom: 10px;">
    <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
    <button type="submit" class="btn btn-outline-secondary">
        Toggle Theme (@(Context.Request.Cookies["Theme"] ?? "light"))
    </button>
</form>

<!-- Admin Link -->
@if (User.IsInRole("Admin"))
{
    <p><a asp-action="All" class="btn btn-warning">View All Users' Todos (Admin)</a></p>
}

<!-- Query Strings: Filter Todos -->
<div class="mb-3">
    <a asp-action="Index" class="btn btn-secondary @(ViewBag.Filter == null || ViewBag.Filter == "all" ? "btn-primary" : "")">All</a>
    <a asp-action="Index" asp-route-filter="pending" class="btn btn-secondary @(ViewBag.Filter == "pending" ? "btn-primary" : "")">Pending</a>
    <a asp-action="Index" asp-route-filter="completed" class="btn btn-secondary @(ViewBag.Filter == "completed" ? "btn-primary" : "")">Completed</a>
</div>

<p>
    <a asp-action="Create" class="btn btn-success">Create New Task</a>
    <a asp-action="Create" asp-route-prefillTitle="Quick Todo" class="btn btn-info">Quick Create</a>
</p>

@if (!Model.Any())
{
    <p class="text-muted">No todos found. Create your first todo above!</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Completed</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@(item.Description ?? "No description")</td>
                    <td>
                        <span class="badge @(item.IsCompleted ? "bg-success" : "bg-secondary")">
                            @(item.IsCompleted ? "Completed" : "Pending")
                        </span>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const theme = document.cookie.split('; ').find(row => row.startsWith('Theme='))?.split('=')[1] || 'light';
            document.body.classList.add(theme);
        });
    </script>
}